{
  "name": "aero",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend/aero-gateway",
    "bench",
    "net-proxy",
    "packages/*",
    "proxy/webrtc-udp-relay/e2e",
    "server",
    "services/image-gateway",
    "tools/disk-streaming-browser-e2e",
    "tools/net-proxy-server",
    "tools/perf",
    "tools/range-harness",
    "web"
  ],
  "engines": {
    "node": ">=22.11.0 <23"
  },
  "scripts": {
    "check:node": "node scripts/check-node-version.mjs",
    "dev": "vite web --config web/vite.config.ts",
    "build": "vite build web --config web/vite.config.ts",
    "preview": "vite preview web --config web/vite.config.ts",
    "serve:coi": "vite build web --config web/vite.config.ts --emptyOutDir && vite preview web --config web/vite.config.ts --host 127.0.0.1 --port 4173 --strictPort",
    "dev:harness": "vite --config vite.harness.config.ts",
    "build:harness": "vite build --config vite.harness.config.ts",
    "preview:harness": "vite preview --config vite.harness.config.ts",
    "serve:coi:harness": "vite build --config vite.harness.config.ts --emptyOutDir && vite preview --config vite.harness.config.ts --host 127.0.0.1 --port 4173 --strictPort",
    "gen:scancodes": "node tools/gen_scancodes/gen_scancodes.mjs",
    "typecheck": "tsc -p tsconfig.json",
    "generate:mega-module": "node scripts/generate-mega-module.mjs",
    "bench:run": "node bench/run",
    "bench:browser": "node bench/run --scenario all --iterations 7",
    "bench:node": "node bench/run.js --out bench/results.json",
    "bench:update-baseline": "node bench/update-baseline",
    "demo": "node web/demo/server.js",
    "test": "npm run test:unit",
    "bench:compare": "node bench/compare --json",
    "bench:gpu": "node --experimental-strip-types bench/gpu_bench.ts",
    "bench:storage": "node --experimental-strip-types bench/runner.ts storage_io",
    "compare:gpu": "node --experimental-strip-types scripts/compare_gpu_benchmarks.ts",
    "compare:storage": "node --experimental-strip-types scripts/compare_storage_benchmarks.ts",
    "compare:storage:policy": "node --experimental-strip-types bench/compare.ts",
    "test:protocol": "node --test --experimental-strip-types emulator/protocol/tests/*.test.ts",
    "test:unit": "npm run typecheck && node -e \"require('node:fs').mkdirSync('test-results', { recursive: true })\" && node --test --test-reporter=spec --test-reporter-destination=stdout --test-reporter=junit --test-reporter-destination=test-results/node-junit.xml --experimental-strip-types --loader ./scripts/ts-strip-loader.mjs backend/aero-gateway/test/originGuard.test.ts backend/aero-gateway/test/tcp*.test.ts backend/aero-gateway/src/**/*.test.ts tests/*.test.js bench/history.test.js bench/tests/*.test.ts tools/perf/tests/*.test.js packages/aero-stats/test/*.test.js web/test/*.test.ts emulator/protocol/tests/*.test.ts && vitest run --reporter=default --reporter=junit --outputFile=test-results/vitest-junit.xml",
    "test:unit:coverage": "vitest run --coverage",
    "pretest:e2e": "npm -w web run wasm:build:single",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:report": "playwright show-report",
    "test:coi": "playwright test tests/e2e/coi.spec.ts",
    "test:security-headers": "playwright test tests/e2e/security-headers.spec.ts",
    "check:security-headers": "node scripts/ci/check-security-headers.mjs",
    "test:webgpu": "playwright test --project=chromium-webgpu",
    "generate:goldens": "node tests/golden/generate_goldens.cjs",
    "test:gpu": "playwright test -c playwright.gpu.config.ts tests/playwright/gpu_golden.spec.ts",
    "wasm:build:dev": "npm -w web run wasm:build:dev",
    "wasm:build:release": "npm -w web run wasm:build:release",
    "wasm:size": "npm -w web run wasm:size"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/wicg-file-system-access": "^2023.10.7",
    "@types/w3c-web-hid": "^1.0.6",
    "@types/node": "^20.11.30",
    "@webgpu/types": "^0.1.68",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/w3c-web-usb": "^1.0.13",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.21.3",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^24.0.0",
    "license-checker-rseidelsohn": "4.3.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.10",
    "vitest": "^1.6.0",
    "wasm-pack": "^0.13.1",
    "wabt": "^1.0.37",
    "ws": "^8.18.0"
  }
}
