{
  "name": "aero",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve:coi": "vite build --emptyOutDir && vite preview --host 127.0.0.1 --port 4173 --strictPort",
    "gen:scancodes": "node tools/gen_scancodes/gen_scancodes.mjs",
    "typecheck": "tsc -p tsconfig.json",
    "generate:mega-module": "node scripts/generate-mega-module.mjs",
    "bench:run": "node bench/run",
    "demo": "node web/demo/server.js",
    "test": "npm run test:unit",
    "bench:run": "node bench/run.js --out bench/results.json",
    "bench:compare": "node bench/compare --json",
    "bench:gpu": "node --experimental-strip-types bench/gpu_bench.ts",
    "bench:storage": "node --experimental-strip-types bench/runner.ts storage_io",
    "compare:gpu": "node --experimental-strip-types scripts/compare_gpu_benchmarks.ts",
    "compare:storage": "node --experimental-strip-types bench/compare.ts",
    "test:protocol": "node --test --experimental-strip-types emulator/protocol/tests/*.test.ts",
    "test:unit": "npm run typecheck && node -e \"require('node:fs').mkdirSync('test-results', { recursive: true })\" && node --test --test-reporter=spec --test-reporter-destination=stdout --test-reporter=junit --test-reporter-destination=test-results/node-junit.xml --experimental-strip-types --loader ./scripts/ts-strip-loader.mjs backend/aero-gateway/test/originGuard.test.ts backend/aero-gateway/test/tcp*.test.ts backend/aero-gateway/src/**/*.test.ts tests/*.test.js bench/history.test.js packages/aero-stats/test/*.test.js web/test/*.test.ts emulator/protocol/tests/*.test.ts && vitest run --reporter=default --reporter=junit --outputFile=test-results/vitest-junit.xml",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:report": "playwright show-report",
    "test:coi": "playwright test tests/e2e/coi.spec.ts",
    "test:webgpu": "playwright test --project=chromium-webgpu",
    "generate:goldens": "node tests/golden/generate_goldens.cjs",
    "test:gpu": "playwright test -c playwright.gpu.config.ts tests/playwright/gpu_golden.spec.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/wicg-file-system-access": "^2023.10.7",
    "@types/node": "^20.10.6",
    "@webgpu/types": "^0.1.68",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.21.3",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.6.0",
    "wabt": "^1.0.37",
    "ws": "^8.18.0"
  }
}
