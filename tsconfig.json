{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client", "node", "@webgpu/types"]
  },
  "include": [
    "src",
    "tests",
    "vite.harness.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "playwright.gpu.config.ts",
    "web/src/global.d.ts"
  ],
  "exclude": ["tests/e2e/**", "tests/playwright/**"]
}
