{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // Some gateway tests intentionally import code from other workspaces
    // (e.g. `web/` browser clients and `tools/` dev relays) for compatibility
    // validation. Set a repo-root `rootDir` and enable TS extension imports so
    // `tsc -p tsconfig.lint.json` can typecheck those integration tests.
    "rootDir": "../..",
    "allowJs": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["dist", "node_modules", "test/e2e"]
}
