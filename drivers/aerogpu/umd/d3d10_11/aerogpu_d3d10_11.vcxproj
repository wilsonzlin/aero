    <!--
      This UMD is meant to be consumed by the real Win7 D3D10/D3D11 runtimes.
      It must be compiled against the official D3D10/D3D11 UMD DDI headers:
        - d3d10umddi.h / d3d10_1umddi.h
        - d3d11umddi.h
        - d3dumddi.h

      These headers are provided by the Windows Driver Kit (WDK) / Windows Kits.
      If they are missing, the compiler error will instruct you to install the kit.

      Optional: /p:AeroGpuWdkRoot may be set to a WinDDK-style root (Win7-era `inc\{api,ddk}` layout;
      typically %WINDDK% / C:\WinDDK\7600.16385.1) so the headers resolve via
      $(AeroGpuWdkRoot)\inc\{api,ddk}. If unset, the build falls back to the toolchain's standard
      include paths (common for WDK10+ installs).
    -->
    <AeroGpuUseWdkHeaders Condition="'$(AeroGpuUseWdkHeaders)'==''">1</AeroGpuUseWdkHeaders>
    <!-- Only treat these env vars as WinDDK-style roots when they contain the expected inc\{api,ddk} layout. -->
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WINDDK)'!='' and ((Exists('$(WINDDK)\\inc\\api\\d3d10umddi.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3d10umddi.h')) And (Exists('$(WINDDK)\\inc\\api\\d3d10_1umddi.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3d10_1umddi.h')) And (Exists('$(WINDDK)\\inc\\api\\d3d11umddi.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3d11umddi.h')) And (Exists('$(WINDDK)\\inc\\api\\d3dumddi.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3dumddi.h')) And (Exists('$(WINDDK)\\inc\\api\\d3dkmthk.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3dkmthk.h')))">$(WINDDK)</AeroGpuWdkRoot>
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WDK_ROOT)'!='' and ((Exists('$(WDK_ROOT)\\inc\\api\\d3d10umddi.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3d10umddi.h')) And (Exists('$(WDK_ROOT)\\inc\\api\\d3d10_1umddi.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3d10_1umddi.h')) And (Exists('$(WDK_ROOT)\\inc\\api\\d3d11umddi.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3d11umddi.h')) And (Exists('$(WDK_ROOT)\\inc\\api\\d3dumddi.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3dumddi.h')) And (Exists('$(WDK_ROOT)\\inc\\api\\d3dkmthk.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3dkmthk.h')))">$(WDK_ROOT)</AeroGpuWdkRoot>
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WDKROOT)'!='' and ((Exists('$(WDKROOT)\\inc\\api\\d3d10umddi.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3d10umddi.h')) And (Exists('$(WDKROOT)\\inc\\api\\d3d10_1umddi.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3d10_1umddi.h')) And (Exists('$(WDKROOT)\\inc\\api\\d3d11umddi.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3d11umddi.h')) And (Exists('$(WDKROOT)\\inc\\api\\d3dumddi.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3dumddi.h')) And (Exists('$(WDKROOT)\\inc\\api\\d3dkmthk.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3dkmthk.h')))">$(WDKROOT)</AeroGpuWdkRoot>
