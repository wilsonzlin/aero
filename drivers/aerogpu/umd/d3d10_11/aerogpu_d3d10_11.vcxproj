  <PropertyGroup Label="UserMacros">
    <!--
      This UMD is meant to be consumed by the real Win7 D3D10/D3D11 runtimes, so
      the default build uses the official WDK D3D10/11 DDI headers.

      Set /p:AeroGpuUseWdkHeaders=0 to build against the repository's minimal
      compat ABI subset instead.

      When enabled, /p:AeroGpuWdkRoot may be set to a Win7-era WDK 7.1 (WinDDK)
      layout root
      (typically %WINDDK% / C:\WinDDK\7600.16385.1) so d3d10umddi.h/d3d11umddi.h
      resolve via $(AeroGpuWdkRoot)\inc\{api,ddk}. If AeroGpuWdkRoot is unset,
      the build falls back to the toolchain's standard include paths (WDK10+).
    -->
    <AeroGpuUseWdkHeaders Condition="'$(AeroGpuUseWdkHeaders)'==''">1</AeroGpuUseWdkHeaders>
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WINDDK)'!=''">$(WINDDK)</AeroGpuWdkRoot>
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WDK_ROOT)'!=''">$(WDK_ROOT)</AeroGpuWdkRoot>
    <!-- Avoid treating a modern WDKROOT (Windows Kits 10+) as a WinDDK-style root. -->
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WDKROOT)'!='' and Exists('$(WDKROOT)\\inc\\api\\d3d10umddi.h')">$(WDKROOT)</AeroGpuWdkRoot>
  </PropertyGroup>

