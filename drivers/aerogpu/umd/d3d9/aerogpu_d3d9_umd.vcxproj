  <PropertyGroup Label="UserMacros">
    <!--
      This UMD is meant to be consumed by the real Win7 D3D9 runtime.

      Repository/CI builds may not have the Win7 WDK D3D9 UMD DDI headers
      (d3d9umddi.h / d3dumddi.h) available, so the default is to use the in-tree
      minimal ABI subset.

      Set /p:AeroGpuUseWdkHeaders=1 to enable WDK headers. For Win7-era WinDDK 7600
      layouts, set /p:AeroGpuWdkRoot=... (or rely on WINDDK / WDK_ROOT /
      WDKROOT env vars) so the build can locate headers under:
        - $(AeroGpuWdkRoot)\inc\api
        - $(AeroGpuWdkRoot)\inc\ddk
    -->
    <AeroGpuUseWdkHeaders Condition="'$(AeroGpuUseWdkHeaders)'==''">0</AeroGpuUseWdkHeaders>
    <!-- Only treat these env vars as WinDDK-style roots when they contain the expected inc\{api,ddk} layout. -->
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WINDDK)'!='' and ((Exists('$(WINDDK)\\inc\\api\\d3d9umddi.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3d9umddi.h')) And (Exists('$(WINDDK)\\inc\\api\\d3dumddi.h') Or Exists('$(WINDDK)\\inc\\ddk\\d3dumddi.h')))">$(WINDDK)</AeroGpuWdkRoot>
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WDK_ROOT)'!='' and ((Exists('$(WDK_ROOT)\\inc\\api\\d3d9umddi.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3d9umddi.h')) And (Exists('$(WDK_ROOT)\\inc\\api\\d3dumddi.h') Or Exists('$(WDK_ROOT)\\inc\\ddk\\d3dumddi.h')))">$(WDK_ROOT)</AeroGpuWdkRoot>
    <AeroGpuWdkRoot Condition="'$(AeroGpuWdkRoot)'=='' and '$(WDKROOT)'!='' and ((Exists('$(WDKROOT)\\inc\\api\\d3d9umddi.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3d9umddi.h')) And (Exists('$(WDKROOT)\\inc\\api\\d3dumddi.h') Or Exists('$(WDKROOT)\\inc\\ddk\\d3dumddi.h')))">$(WDKROOT)</AeroGpuWdkRoot>
    <AeroGpuWdkIncludeDirs Condition="'$(AeroGpuWdkRoot)'!=''">$(AeroGpuWdkRoot)\inc\api;$(AeroGpuWdkRoot)\inc\ddk</AeroGpuWdkIncludeDirs>
  </PropertyGroup>

