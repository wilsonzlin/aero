  <!--
    Win7 x64 driver packages must include the 32-bit WoW64 UMD DLLs (SysWOW64) in addition to
    the native 64-bit DLLs (System32). CI stages the x64 package from the x64 build output
    directory only, so build the Win32 UMDs into $(OutDir) as part of the x64 solution build.
  -->
  <Target Name="BuildWow64Umd" AfterTargets="Build" Condition="'$(Platform)'=='x64'">
    <MSBuild
      Projects="@(Wow64UmdProjects)"
      Targets="Build"
      Properties="Configuration=$(Configuration);Platform=Win32;OutDir=$(OutDir);BaseIntermediateOutputPath=$(BaseIntermediateOutputPath)wow64\"
      BuildInParallel="true" />
  </Target>

