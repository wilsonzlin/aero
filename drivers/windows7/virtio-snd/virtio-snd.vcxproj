<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup Label="ProjectConfigurations">
    <ProjectConfiguration Include="Release|Win32">
      <Configuration>Release</Configuration>
      <Platform>Win32</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Release|x64">
      <Configuration>Release</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
  </ItemGroup>

  <PropertyGroup Label="Globals">
    <ProjectGuid>{98A436CA-35F8-4C4D-BEE1-E3E7C419BECB}</ProjectGuid>
    <Keyword>Win32Proj</Keyword>
    <RootNamespace>virtiosnd</RootNamespace>
    <WindowsTargetPlatformVersion>10.0</WindowsTargetPlatformVersion>
  </PropertyGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.Default.props" />

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|Win32'" Label="Configuration">
    <ConfigurationType>Driver</ConfigurationType>
    <UseDebugLibraries>false</UseDebugLibraries>
    <PlatformToolset>WindowsKernelModeDriver10.0</PlatformToolset>
    <DriverType>WDM</DriverType>
    <TargetVersion>Windows7</TargetVersion>
    <SignMode>Off</SignMode>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'" Label="Configuration">
    <ConfigurationType>Driver</ConfigurationType>
    <UseDebugLibraries>false</UseDebugLibraries>
    <PlatformToolset>WindowsKernelModeDriver10.0</PlatformToolset>
    <DriverType>WDM</DriverType>
    <TargetVersion>Windows7</TargetVersion>
    <SignMode>Off</SignMode>
  </PropertyGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />

  <PropertyGroup Label="UserMacros" />

  <PropertyGroup>
    <!-- Match the binary name referenced by inf/aero-virtio-snd.inf. -->
    <TargetName>virtiosnd</TargetName>
    <TargetExt>.sys</TargetExt>
  </PropertyGroup>

  <ItemDefinitionGroup>
      <ClCompile>
      <WarningLevel>Level4</WarningLevel>
      <ConformanceMode>true</ConformanceMode>
      <TreatWarningAsError>true</TreatWarningAsError>
      <!--
        WDK 10+ headers deprecate some Win7-era pool APIs/types (e.g. NonPagedPool,
        ExAllocatePoolWithTag) even when targeting Windows 7. Silence those
        deprecation warnings so /WX can stay enabled for actionable warnings.
      -->
      <DisableSpecificWarnings>4996;%(DisableSpecificWarnings)</DisableSpecificWarnings>
      <PrecompiledHeader>NotUsing</PrecompiledHeader>
      <PreprocessorDefinitions>_KERNEL_MODE;_WIN32_WINNT=0x0601;WINVER=0x0601;NTDDI_VERSION=NTDDI_WIN7;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      <AdditionalIncludeDirectories>$(ProjectDir)include;$(ProjectDir)src;$(ProjectDir)..\virtio\common\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
      <SpectreMitigation>false</SpectreMitigation>
    </ClCompile>
    <Link>
      <GenerateDebugInformation>true</GenerateDebugInformation>
      <AdditionalDependencies>portcls.lib;ks.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Debug'">
    <ClCompile>
      <PreprocessorDefinitions>DBG=1;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)'=='Release'">
    <ClCompile>
      <PreprocessorDefinitions>DBG=0;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Platform)'=='Win32'">
    <Link>
      <TargetMachine>MachineX86</TargetMachine>
      <AdditionalDependencies>portcls.lib;ks.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Platform)'=='x64'">
    <Link>
      <TargetMachine>MachineX64</TargetMachine>
      <AdditionalDependencies>portcls.lib;ks.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>

  <ItemGroup>
    <ClCompile Include="src\adapter.c" />
    <ClCompile Include="src\topology.c" />
    <ClCompile Include="src\wavert.c" />
    <ClCompile Include="src\backend_virtio_legacy.c" />
    <ClCompile Include="src\aeroviosnd_hw.c" />
    <ClCompile Include="..\virtio\common\src\virtio_pci_legacy.c" />
    <ClCompile Include="..\virtio\common\src\virtio_queue.c" />
  </ItemGroup>

  <!--
    virtiosnd_backend_virtio.c is a standalone virtio-core + virtqueue_split based backend
    intended for a separate PortCls/WaveRT integration path. The current virtiosnd WDM
    driver skeleton uses its own transport/queue plumbing, so exclude this optional
    backend from the default build to avoid pulling in conflicting dependencies.
  -->
  <ItemGroup>
    <ClCompile Remove="src\virtiosnd_backend_virtio.c" />
  </ItemGroup>

  <ItemGroup>
    <ClInclude Include="include\**\*.h" />
    <ClInclude Include="src\**\*.h" />
  </ItemGroup>

  <ItemGroup>
    <None Include="inf\aero-virtio-snd.inf" />
  </ItemGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />
  <ImportGroup Label="ExtensionTargets" />
</Project>
