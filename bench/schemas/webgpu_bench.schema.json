{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aero.example/schemas/webgpu_bench.schema.json",
  "title": "Aero WebGPU bench result",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["supported", "reason"],
      "properties": {
        "supported": { "const": false },
        "reason": { "type": "string" }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "supported",
        "adapter",
        "capabilities",
        "frames",
        "fps",
        "draw_calls_per_frame",
        "pipeline_switches_per_frame",
        "cpu_encode_time_ms",
        "gpu_time_ms",
        "compute"
      ],
      "properties": {
        "supported": { "const": true },
        "adapter": {
          "anyOf": [
            { "type": "null" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "vendor": { "anyOf": [{ "type": "string" }, { "type": "null" }] },
                "architecture": { "anyOf": [{ "type": "string" }, { "type": "null" }] },
                "device": { "anyOf": [{ "type": "string" }, { "type": "null" }] },
                "description": { "anyOf": [{ "type": "string" }, { "type": "null" }] }
              }
            }
          ]
        },
        "capabilities": {
          "type": "object",
          "additionalProperties": false,
          "required": ["timestamp_query"],
          "properties": {
            "timestamp_query": { "type": "boolean" }
          }
        },
        "frames": { "type": "integer", "minimum": 1 },
        "fps": { "type": "number", "minimum": 0 },
        "draw_calls_per_frame": { "type": "integer", "minimum": 1 },
        "pipeline_switches_per_frame": { "type": "integer", "minimum": 0 },
        "cpu_encode_time_ms": {
          "type": "object",
          "additionalProperties": false,
          "required": ["avg", "p95"],
          "properties": {
            "avg": { "type": "number", "minimum": 0 },
            "p95": { "type": "number", "minimum": 0 }
          }
        },
        "gpu_time_ms": { "anyOf": [{ "type": "number", "minimum": 0 }, { "type": "null" }] },
        "compute": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled", "workgroups"],
          "properties": {
            "enabled": { "type": "boolean" },
            "workgroups": { "type": "integer", "minimum": 0 }
          }
        }
      }
    }
  ]
}
