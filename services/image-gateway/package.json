{
  "name": "image-gateway",
  "private": true,
  "version": "0.1.0",
  "description": "Reference implementation for secure streaming of S3-backed disk images via CloudFront signed access",
  "type": "commonjs",
  "engines": {
    "node": ">=22.11.0 <23"
  },
  "main": "dist/index.js",
  "scripts": {
    "check:node": "node ../../scripts/check-node-version.mjs",
    "predev": "npm run check:node",
    "dev": "tsx watch src/index.ts",
    "prebuild": "npm run check:node",
    "build": "tsc -p tsconfig.json",
    "prestart": "npm run check:node",
    "start": "node dist/index.js",
    "pretypecheck": "npm run check:node",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pretest": "npm run check:node",
    "test": "vitest run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/cloudfront-signer": "^3.540.0",
    "@aws-sdk/s3-request-presigner": "^3.540.0",
    "fastify": "^4.26.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
