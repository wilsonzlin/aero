# Required
aws_region  = "us-west-2"
bucket_name = "my-unique-disk-images-bucket"

# Optional: use SSE-KMS instead of SSE-S3 (AES256). If set, ensure the KMS key policy allows
# CloudFront to decrypt objects.
# kms_key_arn = "arn:aws:kms:us-west-2:123456789012:key/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Recommended: allow only the web origins that should be able to fetch with Range headers.
# Leave empty for same-origin usage (no CORS).
cors_allowed_origins = [
  "https://example.com",
]

# Set true if browsers must send credentials (cookies) with requests.
# Note: When true, you must use explicit origins (no "*").
# cors_allow_credentials = false

# Cache mode:
# - immutable: long TTL (best for versioned object keys)
# - mutable: short TTL (for overwrite-in-place workflows)
cache_policy_mode = "immutable"

# Optional: answer CORS preflight (OPTIONS) at the CloudFront edge for /images/*.
enable_edge_cors_preflight = true

# Optional: add/override CORS headers at CloudFront edge (viewer response). This can standardize
# headers across objects without relying on per-object metadata.
enable_edge_cors = true

# Optional: set Cross-Origin-Resource-Policy for COEP: require-corp defence-in-depth.
# Values: "same-origin", "same-site", "cross-origin".
# cross_origin_resource_policy = "same-site"

# Optional: if CORS is handled fully at CloudFront (enable_edge_cors + enable_edge_cors_preflight),
# you can disable S3 CORS configuration.
# enable_s3_cors = false

# Optional: custom domain(s) for the CloudFront distribution.
# If set, you MUST provide an ACM certificate ARN in us-east-1.
# custom_domain_names = ["images.example.com"]
# acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
