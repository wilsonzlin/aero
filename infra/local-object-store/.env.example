# Copy to `.env` to override defaults for local development.
#
# MinIO credentials (also used by the `minio-init` bootstrap container).
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Bucket created on startup for disk images.
BUCKET_NAME=disk-images

# Browser/app origin allowed for CORS (used by MinIO and the optional proxy).
CORS_ALLOWED_ORIGIN=http://localhost:5173

# Optional: helps MinIO generate correct URLs in the console when running on localhost.
MINIO_SERVER_URL=http://localhost:9000
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# Optional: upstream for the nginx proxy (inside the compose network).
S3_UPSTREAM=minio:9000

