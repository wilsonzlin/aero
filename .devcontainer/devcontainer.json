{
  "name": "Aero",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "runArgs": ["--ulimit", "nofile=4096:4096"],
  "containerEnv": {
    "CARGO_BUILD_JOBS": "4",
    "CARGO_INCREMENTAL": "1",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "PW_TEST_WORKERS": "1"
  },
  "postCreateCommand": "bash -lc 'PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1 npm ci && just setup'",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
